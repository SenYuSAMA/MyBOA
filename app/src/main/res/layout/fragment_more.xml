<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:background="@color/more_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MoreFragment">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_6"
        android:id="@+id/login_rl"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100">
        <ImageView
            android:id="@+id/head_icon_iv"
            android:layout_alignTop="@id/login_tv"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_6"
            android:src="@drawable/head_icon14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/login_tv"
            android:layout_toEndOf="@id/head_icon_iv"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginStart="@dimen/dp_8"
            android:textSize="@dimen/sp_24"
            android:textColor="@color/more_login"
            android:text="@string/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/login_tips"
            android:layout_alignStart="@id/login_tv"
            android:layout_below="@id/login_tv"
            android:drawableStart="@drawable/wow"
            android:drawablePadding="@dimen/dp_4"
            android:text="@string/tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/right_arrow"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/login_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_8"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/data_ll"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@id/login_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:gravity="center"
            android:drawablePadding="@dimen/dp_16"
            android:layout_margin="@dimen/dp_10"
            android:drawableStart="@drawable/owe_icon"
            android:text="@string/total_owe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:text="12345.00"
            android:id="@+id/total_owe_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2">
            <View
                android:background="@color/white"
                android:layout_width="@dimen/dp_65"
                android:layout_height="match_parent"/>
            <View
                android:background="@color/line_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:drawablePadding="@dimen/dp_16"
                android:gravity="center"
                android:drawableStart="@drawable/balance_icon"
                android:layout_margin="@dimen/dp_10"
                android:text="@string/totalbalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/total_balance_tv"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:text="12345.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/handle_ll"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@id/data_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/update_rl"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:gravity="center"
                android:drawablePadding="@dimen/dp_16"
                android:layout_margin="@dimen/dp_10"
                android:drawableStart="@drawable/update"
                android:text="@string/update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/right_arrow"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2">
            <View
                android:background="@color/white"
                android:layout_width="@dimen/dp_65"
                android:layout_height="match_parent"/>
            <View
                android:background="@color/line_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/download_rl"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:drawablePadding="@dimen/dp_16"
                android:gravity="center"
                android:drawableStart="@drawable/download"
                android:layout_margin="@dimen/dp_10"
                android:text="@string/download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/right_arrow"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/about_me_rl"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_below="@id/handle_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:drawablePadding="@dimen/dp_16"
            android:gravity="center"
            android:drawableStart="@drawable/about_me"
            android:layout_margin="@dimen/dp_10"
            android:text="@string/about_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/right_arrow"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>



</RelativeLayout>
</ScrollView>