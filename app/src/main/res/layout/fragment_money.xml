<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/unSelectedGrey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MoneyFragment">
    <RelativeLayout
        android:background="#FFF"
        android:id="@+id/money_frag_head_rl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        >
        <LinearLayout
            android:background="@drawable/circle_bg"
            android:layout_centerInParent="true"
            android:id="@+id/head_ll_middle"
            android:layout_width="130dp"
            android:layout_height="30dp">
            <RelativeLayout
                android:id="@+id/balance_rl"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/balance_iv"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/happy_selected"
                    />
                <TextView
                    android:id="@+id/balance_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/selectedBlue"
                    android:layout_toEndOf="@id/balance_iv"
                    android:layout_centerInParent="true"
                    android:text="@string/balance"
                    />
            </RelativeLayout>
            <LinearLayout
                android:background="@color/selectedBlue"
                android:layout_width="1dp"
                android:layout_height="match_parent">

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/owe_rl"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/owe_iv"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/owe_unselected"
                    />
                <TextView
                    android:id="@+id/owe_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/unSelectedGrey"
                    android:layout_toEndOf="@id/owe_iv"
                    android:layout_centerInParent="true"
                    android:text="@string/owe_num"
                    />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:layout_below="@id/money_frag_head_rl"
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</RelativeLayout>